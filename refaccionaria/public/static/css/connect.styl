body
    background-color: #f6f6f6;
    font-size: 14px;
    margin 0px;

.box
    background-color: #fff;
    border-radius: 8px;
    border: 1px solid #d6d6d6;
    position: absolute;
    width: 500px;
    .btn-primary
        background-color: #B1BE86;
        border: 0px;
        width: 30%;
    .form-control
        &:focus
        &:active
            outline: none;
            box-shadow: none;
    .inside
        padding: 16px
    .header
        background-color: #FF7D0F;
        border-radius: 8px;
        padding: 16px;
        a
            img
                display: block;
                margin: 0px auto;
                width: 35%
    .footer
        text-align: center;
        a
            display: inline-block;
            font-size: 0.9em;
            &:last-child
                margin-left: 24px;


.box-login
    left: calc(50% - 250px);
    top: calc(50% - 214.0165px)